<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="#F6B0B0"
            android:paddingTop="1dp"
            android:text="Bienvenido!"
            android:textAlignment="center" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:layout_margin="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/reyslime"
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/reyeslime" />

                        <TextView
                            android:id="@+id/txtReyslime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Rey Slime"
                            android:textAlignment="center" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/descReyslime"
                    android:layout_width="170dp"
                    android:layout_height="89dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/reyslime"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnslime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="Vida" />

            </TableRow>

            <TableRow
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:layout_margin="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ojocutulu"
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/oyodecutulu" />

                        <TextView
                            android:id="@+id/txtOjocutulu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ojo de Cthulhu"
                            android:textAlignment="center" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/descOjocutulu"
                    android:layout_width="170dp"
                    android:layout_height="139dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/ojodecutulu"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnojocutulu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Vida" />

            </TableRow>

            <TableRow
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:layout_margin="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/esqueletron"
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ekeleto" />

                        <TextView
                            android:id="@+id/txtEsqueletron"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Esqueletron"
                            android:textAlignment="center" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/descEsqueletron"
                    android:layout_width="170dp"
                    android:layout_height="142dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/esqueletron"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnesqueletron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Vida" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Valorar APP" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.097" />

        <CheckBox
            android:id="@+id/checknotificaiones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Recibir notificacion de actualizacion"
            app:layout_constraintBottom_toTopOf="@+id/txtReportar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintVertical_bias="0.0" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/txtReportar">

            <TextView
                android:id="@+id/txtReportar"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="Reportar un problema"
                android:layout_gravity="center"/>

            <Spinner
                android:id="@+id/spinnerProblemas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:entries="@array/problemas" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione su dispositivo" />

            <RadioButton
                android:id="@+id/rbcelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Celular"/>
            <RadioButton
                android:id="@+id/rbtablet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tablet"/>

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Especifique su problema"
                android:inputType="textMultiLine" />
        </RadioGroup>
        <Button
            android:id="@+id/btnenviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"/>

        <ProgressBar
            android:id="@+id/pbenviar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
